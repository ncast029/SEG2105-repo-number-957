<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvCreateServiceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit existing service. Must enter correct service name."
            android:textSize="26sp" />

        <EditText
            android:id="@+id/etServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name of Service" />

        <TextView
            android:id="@+id/tvFormInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information needed for the form" />

        <CheckBox
            android:id="@+id/FirstNameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First name" />

        <CheckBox
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name" />

        <CheckBox
            android:id="@+id/DOBButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth " />

        <CheckBox
            android:id="@+id/AddressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />

        <CheckBox
            android:id="@+id/LicenseTypeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License Type" />

        <TextView
            android:id="@+id/tvDocumentInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information needed for the document" />

        <CheckBox
            android:id="@+id/ProofOfResidenceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proof of residence" />

        <CheckBox
            android:id="@+id/ProofofStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proof_of_status" />

        <CheckBox
            android:id="@+id/PhotoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo of the customer " />

        <Button
            android:id="@+id/ConfirmEditServiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Edit Service" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go back (states not saved)" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>